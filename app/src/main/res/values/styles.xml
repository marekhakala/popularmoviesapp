<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Poster image -->
    <style name="PosterImage">
        <item name="android:padding">3dp</item>
        <item name="android:layout_height">163dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:background">@drawable/image_border</item>
    </style>

    <style name="PosterImageContainer">
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_width">200dp</item>

        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginBottom">300dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:layout_gravity">left|top</item>
    </style>

    <!-- Backdrop image -->
    <style name="BackdropImage">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:scaleType">centerCrop</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Movies List -->
    <style name="ListView">
        <item name="android:padding">@dimen/item_space_small</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="MovieCardView" parent="CardView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">@color/primary_light</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="MovieItemTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Movies List - Spinner -->
    <style name="Widget.Movies.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:overlapAnchor" tools:ignore="NewApi">true</item>
    </style>

    <style name="ModeOrderSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/spinner_padding_left</item>
        <item name="android:paddingRight">@dimen/spinner_padding_right</item>
        <item name="android:paddingEnd">@dimen/spinner_padding_right</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MovieDetailOrderDropDown">
        <item name="android:layout_height">@dimen/spinner_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/spinner_dropdown_foreground</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- Movie detail -->
    <style name="MovieDetailContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/detail_movie_width</item>
        <item name="android:layout_below">@id/movie_anchor</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/detail_movie_margin_bottom</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MovieDetailTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieDetailReleaseDate">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="MovieDetailOverview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/line_container</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="MovieDetailSectionTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_marginLeft">@dimen/line_container</item>
        <item name="android:layout_marginStart">@dimen/line_container</item>
        <item name="android:layout_marginTop">@dimen/trailers_space</item>
        <item name="android:layout_marginBottom">5dp</item>

        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="MovieDetailAnchor">
        <item name="android:layout_alignTop">@id/movie_backdrop_container</item>
        <item name="android:layout_alignBottom">@id/movie_backdrop_container</item>
    </style>

    <!-- Movie Detail - Reviews list -->
    <style name="MovieDetailReviewTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">@dimen/line_container</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">@dimen/line_container</item>
        <item name="android:layout_marginStart">@dimen/line_container</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="MovieDetailReviewText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Movie Detail - Trailers list -->
    <style name="MovieDetailTrailerIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/line_container</item>
        <item name="android:layout_marginStart">@dimen/line_container</item>
        <item name="android:src">@drawable/ic_video_library</item>
        <item name="android:tint">@color/primary_dark</item>
    </style>

    <style name="MovieDetailTrailerTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/line_container</item>
        <item name="android:layout_marginLeft">@dimen/line_trailer_container</item>
        <item name="android:layout_marginRight">@dimen/line_container</item>
        <item name="android:layout_marginStart">@dimen/line_trailer_container</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Message Info View -->
    <style name="MessageInfoView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/third_text</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:theme">@style/ActionBar.ThemeOverlay</item>
    </style>

    <style name="ActionBar.ThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="colorControlNormal">@color/text_white</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBar.PopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ActionBar.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>
